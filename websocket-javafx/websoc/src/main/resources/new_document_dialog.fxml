<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<DialogPane xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controllers.NewDocumentDialogController">
    <headerText>Create a New Document</headerText>
    <content>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 20 150 10 10;">
            <children>
                <Label text="Document Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="documentNameField" promptText="Enter document name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField" promptText="Enter username" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:id="createButtonType" text="Create" buttonData="OK_DONE"/>
        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>